.racing-area
  flex: 2 0 40%
  margin: 30px 30px 0

  &__inner
    border-right: 5px solid red

  &__footer
    position: relative

  &__round-info
    display: flex
    justify-content: center
    align-items: center
    width: 80%
    margin-top: 10px
    padding: 5px
    font-weight: 700
    background-color: orange

  &__round-order
    margin-right: 10px

  &__round-distance
    margin-left: 10px

  &__finish
    position: absolute
    top: 50%
    right: -20px
    transform: translateY(-50%)
    font-size: 20px
    font-weight: 700
    text-transform: uppercase
    color: red

  &__end-message
    display: flex
    justify-content: center
    align-items: center
    padding: 0 10px
    margin-top: 20px
    font-size: 30px
    font-weight: 700
    color: red
    transition: all 1s ease
