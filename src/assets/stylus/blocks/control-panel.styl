.control-panel
  display: flex
  justify-content: space-between
  align-items: center
  width: 100%
  padding: 20px 100px
  background-color: #9A12B3

  &__title
    font-size: 50px
    color: #eeeeee

  &__controls
    display: flex
    margin-left: 20px

  &__button
    cursor: pointer
    outline: none
    padding: 15px
    font-size: 20px
    text-transform: uppercase
    color: #eeeeee
    border: 1px solid #eeeeee
    border-radius: 5px
    opacity: 0.8
    transition: all .3s ease
    &:hover
      opacity: 1
    &:active
      border-color: #000

    &:nth-of-type(n+2)
      margin-left: 30px

    &.generate
      background-color: green
      &:disabled
        cursor: not-allowed
        opacity: 0.8

    &.start-pause
      width: 100px
      background-color: blue
      &:disabled
        cursor: not-allowed
        opacity: 0.8
